<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Category Id</th>
            <th>Category Code</th>
            <th>Category Name</th>
        </tr>
    </thead>
    <tbody id="tbData">
    </tbody>
</table>

